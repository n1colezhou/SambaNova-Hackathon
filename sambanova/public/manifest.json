{
  "manifest_version": 3,
  "name": "SYNC Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension built to automatically parse out important events and automatically export to Notion.",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "contextMenus", "https://api.notion.com/*"], 
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "background": {
    "service_worker": "background.js" 
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "host_permissions": ["<all_urls>"]  
}
